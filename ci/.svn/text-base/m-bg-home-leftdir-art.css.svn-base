}
body ul{
		height:60px;
		border:1px solid #BDBDBD;					
		border-radius:5px;
		-webkit-border-radius:5px;
		-moz-border-radius:5px;

		box-shadow:0px 1px 1px #848484;
		-webkit-box-shadow:1px 1px 8px #848484;
		-moz-box-shadow:1px 1px 8px #848484;
		margin-top:-8px;
}
body ul li{
	/*	padding:2px;		
	 */		
		list-style-type:none;
		margin-left:-15px;
		width:80px;
		/*
		background:red;
		*/
		
}
body ul a{
		font-size:18px;				
		text-decoration:none;
}
a:visited{
		color:#6E6E6E;				
}
a:hover{
		color:#0A2A1B;				
}
